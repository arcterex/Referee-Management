<h1>Listing Games</h1>

<table>
  <tr>
    <th>Time</th>
    <th>Field</th>
    <th>Home Team</th>
    <th>Away Team</th>
    <th>Cup Game</th>
    <th>Actions</th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%=h game.gametime.strftime("%D at %I:%M%p") %></td>
    <td><%=h game.field.nil? ? "Undefined" : game.field.name %></td>
    <td><%=h game.home %></td>
    <td><%=h game.away %></td>
    <td><%= game.cup ? "Yes" : "" %>
    <td>
        <%= link_to 'Edit', edit_game_path(game) %> | 
        <%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

