<p>
  <%= f.label :username %><br />
  <%= f.text_field :username %>
</p>
<p>
    <%= f.label :password %><br/>
    <%= f.password_field :password, :size => 40 %>
</p>
<p>
    <%= f.label :password_confirmation, 'Confirm' %><br/>
    <%= f.password_field :password_confirmation, :size => 40 %>
</p>
<p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :address %><br />
  <%= f.text_field :address %>
</p>
<p>
  <%= f.label :email %><br />
  <%= f.text_field :email %>
</p>
<p>
  <%= f.label :phone %><br />
  <%= f.text_field :phone %>
</p>
<p>
  <%= f.label :cell %><br />
  <%= f.text_field :cell %>
</p>
<p>
  <%= f.label :notes %><br />
  <%= f.text_area :notes %>
</p>
<p>
  <%= f.label :role_id, "Role" %><br />
  <%= collection_select (:user, :role_id, Role.all, :id, :name, {:prompt => true }) %>
</p>
<h2>Referee Required Fields</h2>
<p>
  <%= f.label :available %><br />
  <%= f.radio_button :available, "true" %>Available<br/>
  <%= f.radio_button :available, "false" %>On Hold
</p>
<p>
  <%= f.label :dob, "Date of Birth" %><br />
  <%= f.date_select :dob, :start_year => Time.now.year - 100, :end_year => Time.now.year %>
</p>
<p>
  <%= f.label :certification_id, "Certification Level" %><br />
  <%= collection_select (:user, :certification_id, Certification.all, :id, :name, {:prompt => true }) %>
</p>
<p>
  <%= f.label :age_id, "Age Group" %><br />
  <%= collection_select (:user, :age_id, Age.all, :id, :name, {:prompt => true }) %>
</p>
<p>
  <%= f.label :level_id, "Level Group" %><br />
  <%= collection_select (:user, :level_id, Level.all, :id, :name, {:prompt => true }) %>
</p>
