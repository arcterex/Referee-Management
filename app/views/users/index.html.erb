<h1>User List</h1>
<table>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Cell</th>
        <th>Actions</th>
    </tr>
<% @users.each do |user| %>
    <tr>
        <td><%= user.name %></td>
        <td><%= mail_to(user.email) %></td>
        <td><%= user.phone %></td>
        <td><%= user.cell %></td>
        <td>
            <%= link_to 'Edit', edit_user_path(user) %> | 
            <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %>
        </td>
    </tr>
<% end %>
</table>
<br/>

<%= link_to 'New User', new_user_path %>