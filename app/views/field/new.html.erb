<h1>Editing Field</h1>

<% form_for(@field) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :address, 'Address' %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :link, 'URL Link' %><br />
    <%= f.text_field :link %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
      <%= f.submit 'Create' %>  
  </p>
<% end %>

<%= link_to 'Back', fields_path %>