<h1>Listing admins</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Password</th>
    <th>Master</th>
    <th>Actions</th>
  </tr>

<% @admins.each do |admin| %>
  <tr>
    <td><%=h admin.username %></td>
    <td><%=h admin.password %></td>
    <td><%=h admin.is_master %></td>
    <td><%= link_to 'Show', admin %> |
        <%= link_to 'Edit', edit_admin_path(admin) %> |
        <%= link_to 'Destroy', admin, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

